[Unit]
Description=Service for getting ambientlightsensor values of the snom D735
After=knxmonitor.service
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=on-failure
RestartSec=1
Environment=PYTHONPATH=/usr/local/gateway/iot:/usr/local/gateway/knxmonitor:/usr/local/gateway/snomsyslogknx
ExecStart=/usr/bin/python3 /usr/local/gateway/snomsyslogknx/main.py

[Install]
WantedBy=multi-user.target
