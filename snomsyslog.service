[Unit]
Description=Service for getting ambientligtsensor values of the snom D735
After=knxmonitor.service
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=on-failure
RestartSec=1
User=pi
Group=pi
Environment=PYTHONPATH=/usr/local/gateway/iot:/usr/local/gateway/knxmonitor:/usr/local/gateway/snomsyslogknx
WorkingDirectory=/usr/local/gateway/
ExecStart=/usr/bin/python3 snomsyslogknx/main.py

[Install]
WantedBy=multi-user.target
