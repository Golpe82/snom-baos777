[Unit]
Description=Service for Snom Iot Applications (Django)
After=network-online.target
Wants=network-online.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=on-failure
RestartSec=1
WorkingDirectory = /usr/local/snom_baos_777/iot/
Environment=PYTHONPATH=/usr/local/snom_baos_777/iot:/usr/local/snom_baos_777/knxmonitor:/usr/local/snom_baos_777/snomsyslogknx:/usr/local/snom_baos_777/baos777:
ExecStart=/usr/bin/python3 manage.py runserver 0:80 

[Install]
WantedBy=multi-user.target
