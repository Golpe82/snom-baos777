[Unit]
Description=Service for Snom Iot Applications (Django)
After=network-online.target
Wants=network-online.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=on-failure
RestartSec=1
Environment=PYTHONPATH=/usr/local/snom_baos_777/
WorkingDirectory=/usr/local/snom_baos_777/
ExecStartPre=/usr/bin/python3 iot/manage.py migrate
ExecStart=/usr/bin/python3 iot/manage.py runserver 0:80

[Install]
WantedBy=multi-user.target
