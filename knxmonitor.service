[Unit]
Description=Service for monitoring the KNX traffic over the Baos 777
After=network-online.target
Wants=network-online.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=on-failure
RestartSec=1
Environment="PYTHONPATH=/usr/local/snom_baos_777/iot:/usr/local/snom_baos_777/knxmonitor:/usr/local/snom_baos_777/snomsyslogknx:/usr/local/snom_baos_777/baos777:"
ExecStart=/usr/bin/python3 /usr/local/snom_baos_777/baos777/launch_monitor.py

[Install]
WantedBy=multi-user.target
